{
  "name": "branch-narrator-action",
  "version": "1.3.1",
  "description": "GitHub Action that runs branch-narrator on pull requests summaries and risk flags tied to diff evidence. File paths, line numbers, and findings that AI and reviewers can verify.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "release:tag": "node scripts/release-tag.js"
  },
  "keywords": [
    "github-action",
    "branch-narrator",
    "risk-report",
    "pr-review"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^2.1.11",
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.17.10",
    "@vercel/ncc": "^0.38.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20"
  }
}
